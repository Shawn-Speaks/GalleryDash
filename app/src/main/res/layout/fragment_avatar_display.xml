<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="250dp"
             android:background="#bb4444"
             android:paddingBottom="5dp"
             android:paddingTop="5dp">

    <!--  Place the objects you want on the bottom here -->
    <RelativeLayout
        android:id="@+id/skintone_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/skintone"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/skin_m_3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/eye_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/eyes_db"/>

        <RelativeLayout
            android:id="@+id/hair_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/hair"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/hair_bangs_blonde"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shirt_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/shirt"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/m_sleeve_black"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pants_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pants"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pants_purp"/>
        </RelativeLayout>


        <!--  Place the objects you want on the top here -->

    </RelativeLayout>

</FrameLayout>